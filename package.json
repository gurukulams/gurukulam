{
  "name": "gurukulam-web",
  "version": "1.0.0",
  "description": "Gurukulam Web Portal",
  "author": "Sathish Kumar Thiyagarajan",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/techatpark/npm_scripts_static-ref.git"
  },
  "keywords": [
    "npm",
    "scripts",
    "npm scripts",
    "watch",
    "minify",
    "compress"
  ],
  "bugs": {
    "url": "https://github.com/techatpark/npm_scripts_static-ref/issues"
  },
  "homepage": "https://github.com/techatpark/npm_scripts_static-ref#readme",
  "devDependencies": {
    "@babel/core": "^7.13.8",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-multi-entry": "^4.0.0",
    "@rollup/plugin-node-resolve": "^11.2.0",
    "@rollup/plugin-replace": "^2.4.1",
    "autoprefixer": "^10.2.4",
    "browser-sync": "2.26.13",
    "copy-files-from-to": "^3.2.0",
    "eslint": "7.18.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.22.1",
    "html-includes": "^4.3.3",
    "hugo-bin": "^0.71.1",
    "npm-run-all": "4.1.5",
    "onchange": "7.1.0",
    "postcss": "^8.2.10",
    "postcss-cli": "^8.3.1",
    "precss": "^4.0.0",
    "prettier": "2.3.0",
    "rimraf": "3.0.2",
    "rollup": "^2.40.0"
  },
  "scripts": {
    "clean": "rimraf dist",
    "copy": "copy-files-from-to",
    "lint": "eslint src/js --ext .js",
    "serve": "browser-sync start --config browser-sync.js",
    "format:js": "prettier --write src/js",
    "build:hugo": "hugo -d ../dist/books -s books -v",
    "build:css": "postcss -o dist/app.css src/css/*.css",
    "build:js": "rollup -c",
    "build:html": "html-includes --src src --dest dist --minify",
    "build": "run-s clean format:js lint copy build:*",
    "watch:hugo": "onchange \"books\" -- run-s build:hugo",
    "watch:css": "onchange \"src/css\" -- run-s build:css",
    "watch:js": "onchange \"src/js\" -- run-s format:js build:js",
    "watch:html": "onchange \"src/**/*.html\" -- run-s build:html",
    "start": "npm run build && run-p serve watch:*",
    "postinstall": "npm run build"
  },
  "browserslist": [
    "defaults"
  ],
  "dependencies": {
    "quill": "^1.3.6"
  }
}
